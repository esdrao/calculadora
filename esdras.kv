<CalculadoraLayout>:
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 10
        canvas.before:
            Color:
                rgba: 1, 1, 0.5, 1  # Fundo cinza claro
            Rectangle:
                pos: self.pos
                size: self.size

        BoxLayout:
            size_hint_y: None
            height: '120dp'
            padding: [10, 10, 10, 10]
            TextInput:
                id: display
                font_size: 64  # Tamanho dos números aumentado para 64
                readonly: True
                halign: 'right'
                valign: 'middle'
                text: ''
                multiline: False
                background_color: [1, 1, 1, 1]  # Fundo do display branco
                foreground_color: [0, 0, 0, 1]  # Texto preto

        GridLayout:
            cols: 4
            spacing: 20  # Aumentando o espaço entre os botões
            padding: [10, 0, 10, 10]
            row_default_height: '100dp'  # Aumentando a altura padrão para cada linha
            row_force_default: True  # Forçar a altura padrão em todas as linhas

            Button:
                text: '7'
                font_size: 40  # Aumentando o tamanho da fonte dos botões
                background_color: 0, 0, 0.5, 1
                color: 1, 1, 1, 1  # Texto preto
                on_press: root.add_to_expression('7')

            Button:
                text: '8'
                font_size: 40
                background_color: 0, 0, 0.5, 1
                color: 1, 1, 1, 1
                on_press: root.add_to_expression('8')

            Button:
                text: '9'
                font_size: 40
                background_color: 0, 0, 0.5, 1
                color: 1, 1, 1, 1
                on_press: root.add_to_expression('9')

            Button:
                text: '+'
                font_size: 40
                background_color: 0, 0, 0.5, 1
                color: 1, 1, 1, 1
                on_press: root.add_to_expression('+')

            Button:
                text: '4'
                font_size: 40
                background_color: 0, 0, 0.5, 1
                color: 1, 1, 1, 1
                on_press: root.add_to_expression('4')

            Button:
                text: '5'
                font_size: 40
                background_color: 0, 0, 0.5, 1
                color: 1, 1, 1, 1
                on_press: root.add_to_expression('5')

            Button:
                text: '6'
                font_size: 40
                background_color: 0, 0, 0.5, 1
                color: 1, 1, 1, 1
                on_press: root.add_to_expression('6')

            Button:
                text: '-'
                font_size: 40
                background_color: 0, 0, 0.5, 1
                color: 1, 1, 1, 1
                on_press: root.add_to_expression('-')

            Button:
                text: '1'
                font_size: 40
                background_color: 0, 0, 0.5, 1
                color: 1, 1, 1, 1
                on_press: root.add_to_expression('1')

            Button:
                text: '2'
                font_size: 40
                background_color: 0, 0, 0.5, 1
                color: 1, 1, 1, 1
                on_press: root.add_to_expression('2')

            Button:
                text: '3'
                font_size: 40
                background_color: 0, 0, 0.5, 1
                color: 1, 1, 1, 1
                on_press: root.add_to_expression('3')

            Button:
                text: '÷'
                font_size: 40
                background_color: 0, 0, 0.5, 1
                color: 1, 1, 1, 1
                on_press: root.add_to_expression('÷')
            Button:
                text: 'C'
                font_size: 40
                background_color: 0, 0, 0.5, 1
                color: 1, 1, 1, 1
                on_press: root.clear_expression()

            Button:
                text: '0'
                font_size: 40
                background_color: 0, 0, 0.5, 1
                color: 1, 1, 1, 1
                on_press: root.add_to_expression('0')

            Button:
                text: '×'
                font_size: 40
                background_color: 0, 0, 0.5, 1
                color: 1, 1, 1, 1
                on_press: root.add_to_expression('×')

            Button:
                text: '='
                font_size: 50
                background_color: 1, 0, 0, 1
                color: 1, 1, 1, 1
                size_hint_y: 2  # Aumentando a altura do botão
                on_press: root.calculate_result()
                valign: 'middle'
                halign: 'center'